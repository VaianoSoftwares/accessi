{
  "name": "backend",
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "npm run client:build && npm run build && NODE_ENV=production node -r dotenv/config ./dist/index.js",
    "dev": "concurrently -n node,react --kill-others-on-fail nodemon \"npm run client:dev\"",
    "build": "tsc",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "enable-https": "sudo setcap 'cap_net_bind_service=+ep' /usr/bin/node",
    "enable-scanner": "sudo chmod 777 /dev/ttyACM0",
    "scan:make": "cd c-scanner && make clean; make",
    "scan:run": "npm run scan:make && make run",
    "scan:run-win": "npm run scan:make && make run-win"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dateformat": "^5.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "express-promise-router": "^4.1.1",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.11.3",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.13",
    "@types/dateformat": "^5.0.0",
    "@types/express": "^4.17.15",
    "@types/express-fileupload": "^1.4.1",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^18.11.17",
    "@types/pg": "^8.10.9",
    "concurrently": "^7.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
