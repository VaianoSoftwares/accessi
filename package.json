{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node -r dotenv/config server/index.js",
    "win-start": "set NODE_ENV=production&&node -r dotenv/config server/index.js",
    "server": "NODE_ENV=development nodemon",
    "win-server": "set NODE_ENV=development&&nodemon",
    "client": "cd client && npm start",
    "win-client": "cd client && npm run win-start",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "win-dev": "concurrently --kill-others-on-fail \"npm run win-server\" \"npm run win-client\"",
    "client:build": "cd client && npm run build",
    "enable-https": "sudo setcap 'cap_net_bind_service=+ep' /usr/bin/node",
    "enable-scanner": "sudo chmod 777 /dev/ttyACM0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dateformat": "^5.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "joi": "^17.4.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^6.5.1"
  }
}
