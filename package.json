{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "start": "npm run build && NODE_ENV=production node -r dotenv/config ./build/index.js",
    "server": "nodemon",
    "build": "rm -rf ./build && tsc",
    "client": "cd client && npm start",
    "dev": "concurrently -n node,react --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "client:build": "cd client && npm run build",
    "enable-https": "sudo setcap 'cap_net_bind_service=+ep' /usr/bin/node",
    "enable-scanner": "sudo chmod 777 /dev/ttyACM0",
    "make": "cd c-scanner && make clean; make",
    "scan": "cd c-scanner && make clean; make && make run",
    "win-scan": "cd c-scanner && make clean; make && make run-win"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dateformat": "^5.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^4.13.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/dateformat": "^5.0.0",
    "@types/express": "^4.17.15",
    "@types/express-fileupload": "^1.4.1",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^18.11.17",
    "concurrently": "^7.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
