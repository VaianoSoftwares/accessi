    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "express-promise-router": "^4.1.1",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.11.3",
    "ws": "^8.18.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
