  "scripts": {
    "start": "npm run client:build && npm run build && NODE_ENV=production node -r dotenv/config ./dist/index.js",
    "dev": "concurrently -n TSC,NODE,REACT -c blue,green,magenta --kill-others-on-fail \"npm run build:watch\" \"nodemon\" \"npm run client:dev\"",
