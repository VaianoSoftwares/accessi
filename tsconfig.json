{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "nodenext",
    "rootDir": "./server",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
      "esm": true
  },
  "include": [
    "./server/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}
